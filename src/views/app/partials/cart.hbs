<div class='offcanvas offcanvas-end' tabindex='-1' id='offcanvasRight' aria-labelledby='offcanvasRightLabel'>
  <div class='offcanvas-header'>
    <h5 class='offcanvas-title' id='offcanvasRightLabel'>Cart</h5>

    <button type='button' class='btn-close' data-bs-dismiss='offcanvas' aria-label='Close'></button>
  </div>

  <div class='offcanvas-body d-flex flex-column justify-content-between'>
    <div class='cart-products-container d-flex flex-column align-items-center'>
    </div>

    <div>
      {{! Divider }}
      <hr class='mt-3 mb-3' />

      {{! Total price & clear-cart button }}
      <div class='d-flex justify-content-between align-items-baseline'>
        <h5 id='total-price'>
          Total:
          <span style='color:#85BB65;' class='fw-bolder'></span>
        </h5>

        <button id='remove-all' class='clearCart btn btn-outline-danger'>
          <i class='bi bi-trash fs-5'></i>
        </button>
      </div>

      {{! Check out button }}
      <div class='d-grid mt-3'>
        <a href='/checkout' class='checkOut btn btn-primary'>
          Check out
        </a>
      </div></div>
  </div>
</div>