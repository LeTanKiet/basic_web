<div class='container'>
  <h1 class='row d-flex justify-content-center mt-5 mb-3'>Our Products</h1>

  <div class='row'>
    {{! Filter panel }}
    <aside class='col-md-3 mb-3'>
      {{! Categories filter }}
      <div class='card mb-3'>

        {{! Card header }}
        <a
          data-bs-toggle='collapse'
          href='#collapse_categories'
          role='button'
          aria-expanded='false'
          aria-controls='collapse_categories'
          class='text-decoration-none'
        >
          <h5 class='card-header'>
            {{! Chevron icon }}
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='16'
              height='16'
              fill='currentColor'
              class='bi bi-chevron-expand'
              viewBox='0 0 16 16'
            >
              <path
                fill-rule='evenodd'
                d='M3.646 9.146a.5.5 0 0 1 .708 0L8 12.793l3.646-3.647a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 0-.708zm0-2.292a.5.5 0 0 0 .708 0L8 3.207l3.646 3.647a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 0 0 0 .708z'
              />
            </svg>

            Categories
          </h5>
        </a>

        {{! Card body }}
        <div class='collapse show' id='collapse_categories'>
          <div class='card-body'>
            {{! Search bar }}
            <form class='d-flex pb-3' role='search'>
              <input class='form-control me-2' type='search' placeholder='Search product types' aria-label='Search' />

              <button class='btn btn-outline-success' type='submit'>
                {{! Magnifying glass icon }}
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  width='16'
                  height='16'
                  fill='currentColor'
                  class='bi bi-search'
                  viewBox='0 0 16 16'
                >
                  <path
                    d='M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0'
                  />
                </svg>
              </button>
            </form>

            <ul class='list-unstyled'>
              <li><a href='#'>Desks</a></li>
              <li><a href='#'>Dresses</a></li>
              <li><a href='#'>Sofas</a></li>
              <li><a href='#'>Armchairs</a></li>
              <li><a href='#'>Beds</a></li>
              <li><a href='#'>Nightstands</a></li>
              <li><a href='#'>Bookcases</a></li>
            </ul>
          </div>
        </div>

      </div>
      {{! END OF Categories filter }}

      {{! Price range slider }}
      <div class='card mb-3'>

        {{! Card header }}
        <a
          data-bs-toggle='collapse'
          href='#collapse_price'
          role='button'
          aria-expanded='false'
          aria-controls='collapse_price'
          class='text-decoration-none'
        >
          <h5 class='card-header'>
            {{! Chevron icon }}
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='16'
              height='16'
              fill='currentColor'
              class='bi bi-chevron-expand'
              viewBox='0 0 16 16'
            >
              <path
                fill-rule='evenodd'
                d='M3.646 9.146a.5.5 0 0 1 .708 0L8 12.793l3.646-3.647a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 0-.708zm0-2.292a.5.5 0 0 0 .708 0L8 3.207l3.646 3.647a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 0 0 0 .708z'
              />
            </svg>

            Price range
          </h5>
        </a>

        {{! Card body }}
        <div class='collapse' id='collapse_price'>
          <div class='card-body'>
            {{! Range slider }}
            <input type='range' class='custom-range' min='0' max='100' name='' />

            <div class='form-row mt-4'>
              <div class='form-group col-md-6'>
                <label>Min</label>
                <input class='form-control' placeholder='$0' type='number' />
              </div>

              <div class='form-group text-right col-md-6'>
                <label>Max</label>
                <input class='form-control' placeholder='$1,0000' type='number' />
              </div>
            </div>

            {{! Apply button }}
            <button class='btn btn-primary mt-4'>Apply</button>
          </div>
        </div>

      </div>
      {{! END OF Price range slider }}

