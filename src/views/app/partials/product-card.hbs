<div class='product-card position-relative'>
  <div class='image-holder'>
    <img src='images/couch.jpg' alt='couch' class='img-fluid' />
  </div>

  <div class='cart-concern position-absolute d-flex justify-content-center'>
    <div class='cart-button d-flex'>
      <a href='#' class='addToCart btn btn-primary'>
        Add to Cart
        <i class='bi bi-cart3'></i>
      </a>
    </div>
  </div>

  <div class='card-detail d-flex justify-content-between align-items-baseline pt-3 gap-2'>
    <h4 class='title text-capitalize fw-semibold'>
      <a href='/products/{{id}}'>{{name}}</a>
    </h4>

    <h4 class='price'>${{price}}</h4>
  </div>
</div>