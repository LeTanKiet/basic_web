<!-- paymentCheck.hbs -->
<a href='/'>Back</a>
<div class='pin-card'>
  <h2>Verify Payment for Order #{{orderId}}</h2>
  <p>Please enter the PIN sent to your email to proceed with the payment.</p>

  <form action='/payment/{{transactionId}}/check' method='post'>
    <div class='input-group'>
      <label for='pin'>PIN:</label>
      <input type='number' id='pin' name='pin' placeholder='Enter your PIN' required />
    </div>
    <button type='submit' class='add-button'>Verify</button>
  </form>
</div>