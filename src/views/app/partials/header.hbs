{{#if admin}}
  <nav id='navbar' class='navbar navbar-expand-lg bg-body-tertiary'>
    <div class='container container-fluid'>
      {{! Logo }}
      <a class='navbar-brand' href='/admin'>
        <img src='/images/Logo.svg' alt='Fusion Furni' />
      </a>

      {{! Toggle button to show/hide navbar items when the screen size is small }}
      <button
        class='navbar-toggler'
        type='button'
        data-bs-toggle='collapse'
        data-bs-target='#navbarSupportedContent'
        aria-controls='navbarSupportedContent'
        aria-expanded='false'
        aria-label='Toggle navigation'
      >
        <span class='navbar-toggler-icon'></span>
      </button>

      <div class='collapse navbar-collapse' id='navbarSupportedContent'>
        <ul class='navbar-nav me-auto mb-2 mb-lg-0 fw-medium'>

          <li class='nav-item' style='float: right'>
            <a class='nav-link active' aria-current='page' href='/admin/'>Home</a>
          </li>

          <li class='nav-item' style='float: right'>
            <a class='nav-link' aria-current='page' href='/admin/categories'>Categories</a>
          </li>

          <li class='nav-item'>
            <a class='nav-link' href='/admin/products'>Products</a>
          </li>
        </ul>

        {{! If user is logged in, show cart and logout button }}
        {{#if user}}
          {{! Buttons wrapper }}
          <div class='d-flex justify-content-around'>
            {{! Logout button }}
            <form method='post' action='{{BASE_URL}}/auth/logout'>
              <button class='btn border-0' type='submit'>
                <i class='bi bi-box-arrow-right fs-4'></i>
              </button>
            </form>
          </div>
        {{else}}
        {{/if}}
      </div>
    </div>
  </nav>
{{else}}
  <nav id='navbar' class='navbar navbar-expand-lg bg-body-tertiary'>
    <div class='container container-fluid align-items-start'>
      {{! Logo }}
      <a class='navbar-brand' href='/'>
        <img src='/images/Logo.svg' alt='Fusion Furni' />
      </a>

      {{! Toggle button to show/hide navbar items when the screen size is small }}
      <button
        class='navbar-toggler'
        type='button'
        data-bs-toggle='collapse'
        data-bs-target='#navbarSupportedContent'
        aria-controls='navbarSupportedContent'
        aria-expanded='false'
        aria-label='Toggle navigation'
      >
        <span class='navbar-toggler-icon'></span>
      </button>

      <div class='collapse navbar-collapse align-items-start p-1' id='navbarSupportedContent'>
        <form action='/results' method='get' class='d-flex flex-column w-100 me-3'>
          <div class='d-flex'>
            <input
              type='search'
              id='search-form'
              class='search-field form-control me-2'
              placeholder='Type and press Enter'
              name='search_query'
              value='{{searchQuery}}'
            />

            <button class='btn btn-outline-success' type='submit'><i class='bi bi-search'></i></button>
          </div>

          <ul class='list-group list-group-horizontal'>
            {{#each categories}}
              <li class='list-group-item border-0 bg-transparent p-0 pe-3'>
                <a href='/results?search_query={{this}}' style='text-decoration: none;' class='text-body'>{{this}}</a>
              </li>
            {{/each}}
          </ul>
        </form>

        <ul class='navbar-nav me-auto mb-2 mb-lg-0 fw-medium'>
          <li class='nav-item'>
            <a class='nav-link' href='/products'>Products</a>
          </li>
        </ul>

        <ul class='navbar-nav me-auto mb-2 mb-lg-0 fw-medium'>
          <li class='nav-item'>
            <button id='darkModeToggle' class='btn btn-outline-dark'>Dark</button>
          </li>
        </ul>

        {{! If user is logged in, show cart and logout button }}
        {{#if user}}
          {{! Buttons wrapper }}
          <div class='d-flex justify-content-around'>
            {{! User button }}
            <a href='/profile' class='btn border-0'>
              <i class='bi bi-person fs-4 align-bottom'></i>
            </a>

            {{! Cart button }}
            <button
              class='btn border-0 mx-2'
              type='button'
              data-bs-toggle='offcanvas'
              data-bs-target='#offcanvasRight'
              aria-controls='offcanvasRight'
            >
              <i class='bi bi-cart2 fs-4'></i>
            </button>

            {{! Logout button }}
            <form method='post' action='{{BASE_URL}}/auth/logout'>
              <button class='btn border-0' type='submit'>
                <i class='bi bi-box-arrow-right fs-4'></i>
              </button>
            </form>

          </div>
        {{else}}
          <a class='btn btn-primary' role='button' href='/auth/login'>Login</a>
        {{/if}}
      </div>
    </div>
  </nav>
{{/if}}