<div class="dashboard" style="display: flex; flex-direction: column; align-items: center; gap: 10px;">
  <div class="top" style="display: flex; justify-content: space-between; width: 100%; gap: 10px;">
    <div class="sale-overview" style="width: 50%; height: 200px; background-color: #f0f0f0; border: 1px solid black;">
      <h1 style="font-size: 24px;">Sale Overview</h1>
      <select id="month" style="width: 100px;">
        <option value="Dec 2023" selected>Dec 2023</option>
        <!-- Other months -->
      </select>
      <!-- Bar graph here -->
    </div>
    
    <div class="right" style="display: flex; flex-direction: column; width: 50%; gap: 10px;">
      <div class="total-earnings" style="height: 100px; background-color: #f0f0f0; border: 1px solid black;">
        <h1 style="font-size: 24px;">Total Earnings</h1>
        <p style="font-size: 36px;">$123,000</p>
      </div>
      
      <div class="monthly-breakup" style="height: 100px; background-color: #f0f0f0; border: 1px solid black;">
        <h1 style="font-size: 24px;">Monthly Breakup</h1>
        <p style="font-size: 36px;">$26,050</p>
        <!-- Circular progress bar here -->
      </div>
    </div>
  </div>
  
  <div class="middle" style="display: flex; justify-content: space-between; width: 100%; height: 100px; background-color: #f0f0f0; border: 1px solid black; gap: 10px;">
    <div class="delivered" style="flex: 1;">
      <h1 style="font-size: 24px;">Delivered</h1>
      <p style="font-size: 36px;">999</p>
    </div>
    <div class="products" style="flex: 1;">
      <h1 style="font-size: 24px;">Products</h1>
      <p style="font-size: 36px;">250</p>
    </div>
    <div class="users" style="flex: 1;">
      <h1 style="font-size: 24px;">Users</h1>
      <p style="font-size: 36px;">200</p>
    </div>
  </div>
  
  <div class="recent-orders" style="width: 100%; height: 200px; background-color: #f0f0f0; border: 1px solid black;">
    <h1 style="font-size: 24px;">Recent Orders</h1>
    <table style="width: 100%;">
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Products</th>
        <th>Price</th>
      </tr>
      <!-- Rows of orders here -->
    </table>
  </div>
</div>
