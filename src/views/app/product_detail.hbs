<div class="container">
  <div class='product-detail'>
    <div class='product-detail__info'>
      <h2 class='product-detail__title'>{{product.name}}</h2>

      <span class='product-detail__price'>
        $ {{product.price}}
      </span>

      <p class='product-detail__description'>
        {{product.description}}
      </p>

      {{! TODO: Handle add to cart }}
      <button class='product-detail__add'>
        Add to cart
      </button>
    </div>

    <div class='product-detail__image'>
      <img
        src='https://images.unsplash.com/photo-1505740420928-5e560c06d30e?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'
        alt=''
      />
    </div>
  </div>

  <div style="margin-top: 40px;">
    {{! Related products }}
    <h2>Similar Items</h2>
    <div class='row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-5 g-4'>
      {{#each relatedProducts}}
        <div class='col'>{{>product-card this}}</div>
      {{/each}}
    </div>
  </div>
</div>